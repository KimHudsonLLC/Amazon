{
  "manifest_version": 2,

  "name": "Kim Hudson Jewelry",
  "author": "HeartBankÂ®",
  "description": "Engrave anything on Amazon",
  "version": "0.0.1",
  "default_locale": "en",
  "offline_enabled": false,

  "icons": {
    "16": "icons/hb16.png",
    "48": "icons/hb48.png",
    "128": "icons/hb128.png"
  },

  "browser_action": {
    "default_icon": "icons/heartbank.png",
    "default_popup": "cart/checkout.html",
    "default_title": "Kim Hudson Jewelry"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options/options.html",

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },

  "content_scripts": [{
    "css": ["amazon/cart.css"],
    "js": ["amazon/cart.js"],
    "matches": ["https://www.amazon.com/*", "https://smile.amazon.com/*"]
  }],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "web_accessible_resources": [
    "icons/*",
    "options/*",
    "cart/*",
    "_locales/*"
  ],

  "permissions": [
    "tabs",
    "alarms",
    "cookies",
    "geolocation",
    "notifications",
    "storage",
    "unlimitedStorage",
    "*://*/*"
  ],

  "optional_permissions": [
    "activeTab",
    "webRequest"
  ]
}
